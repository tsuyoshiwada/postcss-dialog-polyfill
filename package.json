{
  "name": "@tsuyoshiwada/postcss-dialog-polyfill",
  "version": "1.0.0",
  "description": "PostCSS plugin which add selector needed by dialog-polyfill",
  "main": "lib/index.js",
  "scripts": {
    "prepublish": "babel src -d lib",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint src/*js test/*.js",
    "test:unit": "ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsuyoshiwada/postcss-dialog-polyfill.git"
  },
  "keywords": [
    "dialog",
    "css",
    "postcss",
    "postcss-plugin",
    "polyfill",
    "dialog-polyfill"
  ],
  "author": "tsuyoshiwada",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tsuyoshiwada/postcss-dialog-polyfill/issues"
  },
  "homepage": "https://github.com/tsuyoshiwada/postcss-dialog-polyfill#readme",
  "dependencies": {
    "postcss": "^6.0.21",
    "postcss-selector-parser": "^3.1.1"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.11.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.11.6",
    "eslint": "^4.19.1",
    "eslint-config-defaults": "^9.0.0",
    "node-style-guide": "^1.0.0"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "failFast": true,
    "verbose": true,
    "babel": "inherit",
    "files": [
      "test/*.test.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "defaults",
      "./node_modules/node-style-guide/.eslintrc"
    ],
    "rules": {
      "space-after-keywords": "off",
      "keyword-spacing": [
        2,
        {
          "before": true,
          "after": true
        }
      ]
    }
  }
}
